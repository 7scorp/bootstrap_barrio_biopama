				  <input type="text" class="form-control mb-2 mr-sm-2" id="country-num" value="072" maxlength="3" size="3">
				  <label for="wdpa-id" class="mr-sm-2">WDPA ID:</label>
				  <input type="text" class="form-control mb-2 mr-sm-2" id="wdpa-id" value="600" maxlength="10" size="10">
				  <button type="submit" class="btn btn-primary mb-2">Update URLs</button>
				</form>
				<button type="button" class="btn btn-success" id="check-user-rest">Check <strong>User</strong> Services</button>
				{{ drupal_view('rest_url_list', 'block_1') }}
			  </div> 
			  <div class="card-footer">
				<span id="user-rest-results">
